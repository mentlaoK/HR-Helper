.card-main{
  padding: 0.01rpx;
}
.card-background{
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}
.card-margin{
  width:90%;
  margin:40rpx auto;
  border: 1rpx solid #ccc;
  padding: 20rpx;
  font-family: Helvetica,Arial,"Hiragino Sans GB","Microsoft Yahei","微软雅黑",STHeiti,"华文细黑",sans-serif;
  background-color: rgba(29, 28, 28, 0.4);
  border-radius: 10rpx;
  box-shadow: 0rpx 4rpx 20rpx 6rpx #888888;
  color: #fff;
}
.card-top{
  display: flex;
  align-items: center;
}
.card-image{
  width:160rpx;
  height: 160rpx;
  border-radius: 50%;
}
.card-top-right{
  margin-left: 40rpx;
  font-size: 36rpx;
  
}
.card-top-right_top{
  margin:10rpx 0;
}
.card-top-right text{
  margin-right:20rpx;
}
.card-contnet{
  font-size: 32rpx;
  line-height: 46rpx;
  text-indent: 50rpx;
}